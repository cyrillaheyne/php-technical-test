{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <div class="container">
        <div class="row">
            <div class="col">
                <a href="{{ path('user_new') }}" class="btn btn-success float-right">Nouveau</a>
            </div>
        </div>

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th>actions</th>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('user_show', {'id': user.id}) }}" type="button" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" type="button" class="btn btn-success"><i class="fa fa-edit"></i></a>
                    </div>
                </td>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
